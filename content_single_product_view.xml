<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_single_product_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.meluha.monlashsolutions.meluha.SingleProductViewActivity"
    tools:showIn="@layout/activity_single_product_view">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="220dp"
            android:layout_height="230dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            android:layout_gravity="center"/>

        <TextView
            android:text="Heats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textSize="35dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <TextView
                android:text="@string/Rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_gravity="center"
                android:textSize="25dp"/>
            <android.support.v4.widget.Space
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/Rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fullprice"
                android:layout_gravity="right"
                android:textSize="25dp"/>


        </LinearLayout>




        <RadioGroup
            android:id="@+id/buytype"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <RadioButton
                android:text="Online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/online"
                android:layout_gravity="left"
                android:layout_marginLeft="60dp"/>
            <RadioButton
                android:text="Online+Offline+SD Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onsd"
                android:layout_gravity="left"
                android:layout_marginLeft="60dp"/>
            <RadioButton
                android:text="Online+Offline+USB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onusb"
                android:layout_gravity="left"
                android:layout_marginLeft="60dp"/>



        </RadioGroup>


        <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:textSize="25dp"/>

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_gravity="center"
            android:padding="5dp"/>

        <Button
            android:text="ADD TO CART"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_gravity="center"
            android:background="#b2c549"
            android:padding="20dp"/>


    </LinearLayout>
</ScrollView>
